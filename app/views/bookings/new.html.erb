<h1>Booking</h1>

<h2>Flight #<%= @flight.id %></h2>
<h3>Date <%= @flight.formatted_date%></h3>
<h3>Departing from <%= @flight.from_airport.code %></h3>


  <%= form_for @booking do |f| %>
    <%= f.hidden_field :flight_id %>
    <h3 id="passInfo">Passenger Information</h3>
    <div class="form-group">
     <%= f.fields_for :passengers, class: 'form-control' do |p| %>
     <div class="form-group">
     <div class="col-md-offset-3 col-md-6">
       <%= p.label :name %>
       <%= p.text_field :name, class: 'form-control' %>
       </div>
       </div>

       <div class="form-group">
       <div class="col-md-offset-3 col-md-6">
       <%= p.label :email %>
       <%= p.email_field :email, class: 'form-control', id: 'email' %>
       </div>
       </div>
    <% end %>

        <div class="col-md-offset-3 col-xs-4">
       <%= f.submit "Confirm", class: 'btn btn-lg btn-primary' %>
       </div>
       </div>
 <% end %>
